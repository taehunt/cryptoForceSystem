generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Admin {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  username     String @unique
  passwordHash String
  role         String
}

model Config {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String @unique
  value String
}

model Transaction {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String
  amount    Float
  status    String
  createdAt DateTime @default(now())
}

model User {
  id              String           @id @map("_id")
  email           String           @unique
  passwordHash    String
  createdAt       DateTime         @default(now())
  paymentRequests PaymentRequest[]
}

model Merchant {
  id              String           @id @default(uuid()) @map("_id")
  name            String
  description     String?
  walletAddress   String
  createdAt       DateTime         @default(now())
  paymentRequests PaymentRequest[] @relation("MerchantToPayments")
}

model PaymentRequest {
  id         String   @id @default(uuid()) @map("_id")
  userId     String
  merchantId String
  amount     Float
  status     String
  createdAt  DateTime @default(now())

  merchant Merchant @relation("MerchantToPayments", fields: [merchantId], references: [id])
  User     User     @relation(fields: [userId], references: [id])
}
