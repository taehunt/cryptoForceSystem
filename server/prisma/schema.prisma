generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Admin {
  id           Int    @id @default(autoincrement())
  username     String @unique
  passwordHash String
  role         String
}

model Config {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}

model Transaction {
  id            Int      @id @default(autoincrement())
  type          String
  status        String
  walletAddress String
  amount        Int
  createdAt     DateTime @default(now())
}

model User {
  id           String   @id @default(uuid()) // 프론트 회원가입에서 string id 사용
  email        String   @unique
  passwordHash String
}
